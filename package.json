{
  "name": "pilota",
  "version": "7.0.0",
  "description": "Command bus for RxJS",
  "scripts": {
    "build": "node ./node_modules/.bin/webpack --progress",
    "test": "mocha --require babel-core/register --colors 'test/**/*spec.js'",
    "test:watch": "mocha --require babel-core/register --colors -w 'test/**/*spec.js'",
    "dev": "WEBPACK_ENV=dev webpack --progress --colors --watch"
  },
  "main": "lib/pilota.js",
  "files": [
    "lib/pilota.js",
    "lib/pilota.js.map"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ndp-software/pilota.git"
  },
  "keywords": [
    "rxjs",
    "event bus",
    "reducer",
    "factory"
  ],
  "author": "Andrew J. Peterson",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ndp-software/pilota/issues"
  },
  "homepage": "https://github.com/ndp-software/pilota#readme",
  "dependencies": {
    "rxjs": "^7"
  },
  "devDependencies": {
    "@babel/cli": "*",
    "@babel/core": "*",
    "@babel/preset-env": "*",
    "@babel/register": "*",
    "babel-loader": "*",
    "chai": "*",
    "mocha": "*",
    "rxjs-compat": "*",
    "simple-mock": "*",
    "webpack": "*",
    "webpack-cli": "*",
    "yargs": "*"
  }
}
